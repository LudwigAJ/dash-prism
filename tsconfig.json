{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src/ts",
    "rootDir": "src/ts",
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@context/*": ["context/*"],
      "@constants/*": ["constants/*"],
      "@store": ["store/index"],
      "@store/*": ["store/*"]
    }
  },
  "exclude": [
    "node_modules",
    "*.css",
    "vitest.config.ts"
  ]
}
